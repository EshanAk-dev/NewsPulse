<android.widget.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.UserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Logo Image -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginBottom="76dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:src="@drawable/logo" /> <!-- Optional if you need a background-->


        <!-- Row 1: Local News and International News Icons -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="16dp">
            <!-- Local News Icon -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginEnd="16dp">
                <TextView
                    android:text="Local News"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/icon_local"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_local"
                    android:contentDescription="Local News"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:clipToOutline="true"
                    android:background="@drawable/rounded_border"/>
            </LinearLayout>

            <!-- International News Icon -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:text="International News"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/icon_international"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_international"
                    android:contentDescription="International News"
                    android:scaleType="fitXY"
                    android:clipToOutline="true"
                    android:background="@drawable/rounded_border"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Row 2: Business News and Sports News Icons -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="16dp">
            <!-- Business News Icon -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginEnd="16dp">
                <TextView
                    android:text="Business News"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/icon_business"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_business"
                    android:contentDescription="Business News"
                    android:scaleType="fitXY"
                    android:clipToOutline="true"
                    android:background="@drawable/rounded_border"/>
            </LinearLayout>

            <!-- Sports News Icon -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:text="Sports News"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/icon_sports"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_sports"
                    android:contentDescription="Sports News"
                    android:scaleType="fitXY"
                    android:clipToOutline="true"
                    android:background="@drawable/rounded_border"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Logout Button -->
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_marginTop="160dp"/>
    </LinearLayout>
</android.widget.ScrollView>
