<android.widget.ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Local News Icon -->
        <TextView
            android:text="Local News"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/icon_local"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_local"
            android:contentDescription="Local News"
            android:layout_marginBottom="16dp"
            android:scaleType="fitXY"/>

        <!-- International News Icon -->
        <TextView
            android:text="International News"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/icon_international"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_international"
            android:contentDescription="International News"
            android:layout_marginBottom="16dp"
            android:scaleType="fitXY"/>

        <!-- Business News Icon -->
        <TextView
            android:text="Business News"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/icon_business"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_business"
            android:contentDescription="Business News"
            android:layout_marginBottom="16dp"
            android:scaleType="fitXY"/>

        <!-- Sports News Icon -->
        <TextView
            android:text="Sports News"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/icon_sports"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_sports"
            android:contentDescription="Sports News"
            android:layout_marginBottom="16dp"
            android:scaleType="fitXY"/>

        <!-- Logout Button -->
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</android.widget.ScrollView>
